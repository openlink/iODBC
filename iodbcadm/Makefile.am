SUBDIRS			= gtk

bin_PROGRAMS		= iodbcadm-gtk
lib_LTLIBRARIES		= libiodbcadm.la
endif

if GTK
AM_CPPFLAGS		= \
	-I$(top_srcdir)/include \
	-I$(top_srcdir)/iodbc \
	-I$(top_srcdir)/iodbcinst \
	@GTK_CFLAGS@ -D__GTK__
else
AM_CPPFLAGS		= \
	-I$(top_srcdir)/include \
	-I$(top_srcdir)/iodbc \
	-I$(top_srcdir)/iodbcinst
endif

libiodbcadm_la_LDFLAGS	= \
	-version-info @lib_version@ \
	-export-symbols $(srcdir)/iodbcadm.exp

