libiodbcadm_la_LIBADD	= \
	gtk/libiodbcadm-gtk.la \
	$(LIBADD_DL) \
	@GTK_LIBS@ \
	../iodbcinst/libiodbc_common.la \
	../iodbcinst/libiodbcinst.la \
	../iodbc/libiodbc.la
else
libiodbcadm_la_LIBADD	= \
	$(LIBADD_DL) \
	../iodbcinst/libiodbc_common.la \
	../iodbcinst/libiodbcinst.la \
	../iodbc/libiodbc.la
endif

